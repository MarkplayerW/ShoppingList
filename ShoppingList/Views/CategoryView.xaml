<ContentView
    x:Class="ShoppingList.Views.CategoryView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShoppingList.Views">

    <Frame
        Padding="10"
        Margin="0,0,0,10"
        CornerRadius="10"
        BorderColor="#CCCCCC">

        <VerticalStackLayout Spacing="10">
            <Button
                Text="{Binding Name}"
                FontAttributes="Bold"
                BackgroundColor="#F5F5F5"
                TextColor="Black"
                CornerRadius="6"
                Clicked="ToggleClicked"/>

            <VerticalStackLayout
                IsVisible="{Binding IsExpanded}"
                Spacing="8">

                <Button
                    Text="Dodaj produkt"
                    BackgroundColor="#E8F0FE"
                    TextColor="Black"
                    CornerRadius="6"
                    Clicked="AddProductClicked"/>

                <CollectionView ItemsSource="{Binding Products}"
                                SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <views:ProductView/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </Frame>
</ContentView>
