<ContentPage
    x:Class="ShoppingList.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ShoppingList.Views"
    Title="Lista zakupów">

    <Grid Padding="15" RowDefinitions="Auto,*">

        <Button
            Grid.Row="0"
            Text="Dodaj kategorię"
            BackgroundColor="#E0E0E0"
            TextColor="Black"
            CornerRadius="8"
            Clicked="AddCategoryClicked" />

        <CollectionView
            Grid.Row="1"
            x:Name="CategoriesList"
            SelectionMode="None"
            VerticalOptions="FillAndExpand">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:CategoryView />
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>
</ContentPage>
